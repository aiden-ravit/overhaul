{
  "name": "overhaul-admin",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run db:setup && cross-env ENVIRONMENT=local API_BASE_URL=http://localhost:8787 next dev",
    "dev:worker": "npm run db:setup && wrangler dev",
    "build": "next build",
    "build:pages": "next build",
    "start": "next start",
    "lint": "next lint",
    "worker:deploy": "wrangler deploy",
    "pages:deploy": "npm run build:pages && wrangler pages deploy out --project-name=overhaul-frontend",
    "db:migrate:dev": "node scripts/migrate.js dev",
    "db:migrate:dev:remote": "node scripts/migrate.js dev --remote",
    "db:migrate:prod": "node scripts/migrate.js prod --remote",
    "db:setup": "npm run db:migrate:dev",
    "db:reset": "npm run db:schema && npm run db:seed",
    "db:schema": "wrangler d1 execute overhaul-as-system-dev --file=database/schema.sql",
    "db:seed": "wrangler d1 execute overhaul-as-system-dev --file=database/seed.sql"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.13.2",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "next": "^14.2.31",
    "next-themes": "^0.4.6",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250816.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "cross-env": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.7",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wrangler": "^4.30.0"
  }
}
